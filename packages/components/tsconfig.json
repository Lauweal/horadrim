{
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "react",
    "outDir": "lib",
    "declaration": true,
    "esModuleInterop": true,
    "target": "es2017",
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": false,
    "isolatedModules": false,
    "lib": [
      "DOM",
      "es2017"
    ],
    "paths": {
      "@component/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "src/*.ts",
    "src/**/*.ts",
    "src/*.tsx",
    "src/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}